<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" 
      fx:controller="com.hotelreservation.controller.LoginController"
      alignment="CENTER" spacing="20" style="-fx-background-color: white;">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Hotel Management System" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
    
    <VBox alignment="CENTER" spacing="10" maxWidth="300">
        <TextField fx:id="staffIdField" promptText="Staff ID" style="-fx-font-size: 14;"/>
        <PasswordField fx:id="passwordField" promptText="Password" style="-fx-font-size: 14;"/>
        <Button text="Login" onAction="#handleLogin" 
                style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14;"/>
    </VBox>
</VBox>
